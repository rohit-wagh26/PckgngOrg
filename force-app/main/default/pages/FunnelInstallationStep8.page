    <script>
    window.onload = function() {
        jQuery('input[type=text]').blur();
        
    };
    quotaEmpty
    var hybridPresent = {!hybridPresent};
    var quotaEmpty = {!quotaEmpty};
    function createNow(){
        if(hybridPresent || quotaEmpty){
            $('#confirm').modal('show');
        }else{
            CreateHD();
        }
    
    }
    function createLater(){
        
        if(hybridPresent || quotaEmpty){
            $('#confirmsch').modal('show');
        }else{
            CreateHDMidnight();
        }
    
    }
</script>
 
